$result = Db::name('user')
            ->join('post','user.id = post.user_id','left')
            ->where('user.id',6)//条件:状态为1
            ->order('user.id desc')//根据id降序排列
            ->limit(4)//限制10条
            ->field(['user.*','post.title','post.cont'])
            ->select();
            /*->join('left join post','user.id = post.id')
            ->find();
